{
  "name": "ai-booking-system",
  "version": "1.0.0",
  "description": "AI驅動的場地預訂系統",
  "main": "backend/server.js",
  "scripts": {
    "start": "cd backend && npm start",
    "build": "npm run install-deps && npm run build-frontend",
    "install-deps": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build-frontend": "cd frontend && npm run build",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "postinstall": "npm run install-deps",
    "heroku-postbuild": "npm run build-frontend"
  },
  "keywords": ["ai", "booking", "venue", "reservation", "railway"],
  "author": "AI Booking System",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
} 